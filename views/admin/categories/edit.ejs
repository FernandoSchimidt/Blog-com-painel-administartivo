<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>

<div class="container">
    <BR></BR>
    <div class="card">
        <div class="card-header">
            <h2>Editar Categoria</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/categories/update">
                <input class="form-control" type="text" name="title" placeholder="Defina o titulo da categoria"
                    value="<%=category.title %>">
                <input type="hidden" name="id" value="<%=category.id %> "><!--envia o id para o backend-->
                <br>
                <button class="btn btn-primary">Atualizar</button>
            </form>
        </div>

    </div>
</div>

